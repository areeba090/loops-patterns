#include <stdio.h>
int main ()
{
	int n;
	scanf ("%d",&n);
	int s=0;
	int c=n;
	for (int i=1;i<=n;i++)
	{
		for (int j=1;j<=c;j++)
		{
			if (j<=s)
			{
				printf (" ");
			}
			else
			{
				printf ("*");
			
				
			}
			
			
		}
			if (i<=n/2)
				{
					c--;
					s++;
				}
				else
				{
					c++;
					s--;
				}
		printf ("\n");
	}
}
